@model IEnumerable<DrinksManagament.Models.ProductVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de productos</h1>


<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceForStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductsByPallet.Quantity)
            </th>
            <th>
                Pallet ID
            </th>
            <th>
                Tipo producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForOne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceForStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductsByPallet.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductsByPallet.PalletId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-outline-primary btn-sm" asp-action="Create"> <i class="fas fa-plus"></i> Agregar Producto</a>
</div>
